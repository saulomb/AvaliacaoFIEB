
@model Avaliacao.Application.ViewModels.EscalaViewModel
@{
    ViewData["Title"] = "Adcionar do Escala";
}
<h1>Cadastro de Funcionário</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RemoverEscala">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <input type="hidden" asp-for="FuncionarioId" />
            <input type="hidden" asp-for="DiaDaSemana" />
            <input type="hidden" asp-for="HoraInicio" />
            <input type="hidden" asp-for="HoraTermino" />
            <input type="hidden" asp-for="TempoDescanso" />

            <div class="form-group">
                <label class="control-label">Dia da Semana</label>
                <p class="form-control">@Model.DiaDaSemana.ToString()</p>
                <span asp-validation-for="DiaDaSemana" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HoraInicio" class="control-label"></label>
                <p class="form-control">@Model.HoraInicio</p>
                <span asp-validation-for="HoraInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraTermino" class="control-label"></label>
                <p class="form-control">@Model.HoraTermino</p>
                <span asp-validation-for="HoraTermino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TempoDescanso" class="control-label"></label>
                <p class="form-control">@Model.TempoDescanso</p>
                <span asp-validation-for="TempoDescanso" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a class="btn btn-info" asp-action="Index">Voltar</a>
                <input type="submit" value="Remover" class="btn btn-danger" />
            </div>
        </form>
    </div>

</div>
